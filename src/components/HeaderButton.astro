---
const { title, link } = Astro.props;
---

<a
  class="flex justify-center inline—flex cursor-pointer rounded-lg px-4 py-2 mr-2 mb-2 bg-gray-200 hover:bg-gray-300 hover:shadow-lg transition duration-200 ease-in-out scale—95 hover:scale-105 hover:opacity-100 font-medium focus:outline-none"
  href={link}
>
  <slot>{title}</slot>
</a>
